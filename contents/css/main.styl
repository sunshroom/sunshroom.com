// Development mode
dev = true

// Nib: https://github.com/visionmedia/nib
@import "nib"
//global-reset()

// Normalize: https://github.com/necolas/normalize.css
@import "normalize"

// Grid configuration from Fluidity
grid-width = 960px
grid-min-width = 320px
@import "grid"

base-line-height = 35px
base-font-size = 20px
@import "rhythm"
//@import "type"

// Color scheme
c-base = #222
c-bg = #FFF
c-text = c-base
c-header = c-base + 5%
c-accent = #269
c-abbr = #999
c-ins-bg = #999
c-pre = #eee
c-link = blue
c-link-active = lighten(c-link, 20%)
c-link-focus = darken(c-link, 20%)
c-link-hover = lighten(c-link, 10%)
c-link-visited = darken(c-link, 10%)


@import "global"


// Layout
#body-wrap
  grid()


#typography
  .headings
    grid-space(33%)
  .headings-example
    grid-space(23%)
  .paragraphs
    grid-space(44%)
  .lists-1
    grid-space(33%)
  .lists-2
    grid-space(33%)
  .lists-3
    grid-space(34%)
  .blockquotes
    grid-space(33%)
  .code-blocks
    grid-space(33%)
  .address-blocks
    grid-space(33%)


#nav-main
  ul
    list-style-type none
    li
      float left
      padding 0 space()
      text-transform uppercase
      a
        text-decoration none
      &:hover
        //background c-bg - 5%

.content-wrap
  clearfix()

.avatar img
  width space(3, 6px)
  height space(3, 6px)
  border-radius(space(3))
.avatar
  @extend .avatar img
  border 3px solid c-accent
  float left
