// Development mode true or false?
dev = false

// Base variables
base-font-family  = sans-serif
base-font-size    = 18px
base-line-height  = 32px
indent-amount     = unit(base-line-height / base-font-size, em)

// Nib: https://github.com/visionmedia/nib
@import "nib"

// Normalize: https://github.com/necolas/normalize.css
@import "../../../bower_components/normalize.styl/normalize.styl"

// Simple semantic grid configuration from Fluidity: http://fluiditycss.com/
// Currently unused
grid-min-width    = 400px
@import "_grid"

// Vertical rhythm inspired by Compass (but mostly original)
@import "_rhythm"

// Colour scheme
@import "_colour"

// Type: use pre-defined stacks or define your own here; base-font-body, base-font-header, and base-font-monospace
base-font-body    = stack-pt-serif-body
base-font-header  = stack-pt-serif-head
@import "_type"

// Self-explanatory
base-p-style      = web // Either "web" (spaces between paragraphs) or "book" (no space but indented)
@import "_global"

// Layout
.frame-outer
  min-width 300px
  max-width 960px
  margin 0 auto
  padding 0 space(2)
  width 100%
  transition opacity .8s ease-out
  @media all and (max-width: 600px)
    margin 0
    padding 0

.frame-inner
  background rgba(c-body-bg, 0.9)
  border-radius space()
  box-shadow inset 0 3px 50px rgba(0,0,0,0.05), 0 0 25px rgba(0,0,0,0.1)
  margin space() 0
  @media all and (max-width: 600px)
    border-radius 0
    box-shadow inset 0 3px 25px rgba(0,0,0,0.025), 0 0 15px rgba(0,0,0,0.5)
    margin 0

.contents
  clearfix()
  padding space() space(2)
  @media all and (max-width: 600px)
    padding space()

.avatar-outer
  left space(-3.5)
  position absolute
  z-index 3
  @media all and (max-width: 600px)
    display none

.avatar-inner
  border-radius(space(3))
  box-shadow inset 0 4px 10px rgba(0,0,0,0.5), inset 0 -4px 20px rgba(255,255,255,1)
  height space(3)
  width space(3)
  &:hover
    box-shadow inset 0 -4px 15px rgba(0,0,0,0.75), inset 0 2px 30px rgba(255,255,255,1)
    transition box-shadow .4s ease-out

.avatar-inner img
  border-radius(space(3))
  box-sizing border-box
  box-shadow 3px 3px 20px rgba(0,0,0,0.7)
  height space(3)
  position relative
  width space(3)
  z-index -1

.contents>header
  a:hover
    text-decoration none
  h1:hover
    background-clip text
    background-color c-body + 25%
    color transparent
    text-shadow 2px 2px 4px rgba(0,0,0,0.25)
    transition .5s ease-out

.contents>header nav
  float left
  scale 6
  ul
    list-style-type none
    margin-left space(-0.625)
    li
      float left
      font-weight bold
      margin 0 0 0 space(0.125)
      padding 0 space(0.5) 0 space(0.5)
      text-shadow 1px 1px 3px rgba(0,0,0,0.1)
      text-transform uppercase
      a
        text-decoration none

.contents>section
  border-bottom 1px solid c-hr
  border-top 1px solid c-hr
  margin-bottom space(0.5, 1px)
  margin-top space(0.5)
  padding-bottom space(0.5)
  padding-top space(0.5, 1px)

.contents>section article img
  border-radius space(0.5)
  box-shadow 0 3px 9px rgba(0,0,0,0.5)

.contents>footer
  scale 8
  margin 0 auto

.contents>footer nav
  scale 3 8
  margin 0 auto space()

// Backstretch
.slideshow-toggle
  scale 6
  background rgba(c-body-bg, 0.8)
  border-radius space()
  box-shadow inset 0 3px 50px rgba(0,0,0,0.05), 0 0 25px rgba(0,0,0,0.1)
  opacity 0
  padding space(0.5)
  position absolute
  bottom space(0.5)
  right space(0.5)
  text-transform uppercase
  transition all .4s ease

.backstretch
  filter unquote("grayscale(100%)")
  -moz-filter unquote("grayscale(100%)")
  -webkit-filter unquote("grayscale(100%)")
  opacity 0.1

.slideshow-active
  .backstretch
    filter none
    -moz-filter none
    -webkit-filter none
    opacity 1
    transition all .8s ease

// Helpers
.grid
  grid()

.grid-half
  grid-space(1/2 * 100%)

.grid-third
  grid-space(1/3 * 100%)

.grid-quarter
  grid-space(1/3 * 100%)

.clearfix
  clearfix()

.alignleft
  float left

.alignright
  float right

.padleft
  padding-left space()

.padright
  padding-right space()

.marginleft
  margin-left space()

.marginright
  margin-right space()

.hide
  opacity 0

.show
  opacity 1

