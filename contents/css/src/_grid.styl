// Semantic grid adapted from Fluidity: http://fluiditycss.com/
grid-width        ?= 100%
grid-min-width    ?= 960px

grid(width = grid-width, min-width = grid-min-width)
  position relative
  width width
  min-width min-width
  margin 0 auto
  overflow hidden

section()
  display block
  position relative
  float left
  width 100%
  height 100%
  margin 0
  padding 0
  clear both

header
footer
section
  section()

grid-space(width, spacing = true)
  display block
  position relative
  float left
  height 100%
  unless spacing is false
    margin 0
    padding 0
  box-sizing border-box
  width width

center-space()
  float none
  margin 0 auto
